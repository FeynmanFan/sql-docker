@model DessertStore.Models.Product

<h2>@Model.Title</h2>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Details</h5>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Price:</strong> @Model.Price</p>
        <p><strong>In Stock:</strong> @(Model.InStock ? "Yes" : "No")</p>
        <h5>Images</h5>
        @if (Model.Images.Any())
        {
            <div class="row">
                @foreach (var image in Model.Images)
                {
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <img src="@image.Path" class="card-img-top" alt="@image.Title" style="max-height: 200px; object-fit: cover;" />
                            <div class="card-body">
                                <p class="card-text">@image.Title</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No images available.</p>
        }
        <a asp-action="Index" class="btn btn-primary mt-3">Back to List</a>
    </div>
</div>